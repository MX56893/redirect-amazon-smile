root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = tab
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false
indent_size = 2
indent_style = space

[*.json]
insert_final_newline = false
trim_trailing_whitespace = false
indent_size = 4

[*.{yml,yaml}]
indent_size = 2

[*.js]
indent_size = 2
indent_style = tab

[*.{scss,css}]
indent_size = 2
indent_style = space
